# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/charging_station_db

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# SMS API Configuration (AkashSMS)
AKASHSMS_API_KEY=your_akashsms_api_key
AKASHSMS_API_URL=https://api.akashsms.com/send

# Email API Configuration (ZeptoMail)
ZEPTOMAIL_API_KEY=your_zeptomail_api_key
ZEPTOMAIL_API_URL=https://api.zeptomail.in/v1.1/email

# App Configuration
APP_NAME=ChargingStation Booking
FRONTEND_URL=http://localhost:3000

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_RETRY_LIMIT=3

# Payment Configuration
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MinIO Configuration
MINIO_ENDPOINT=127.0.0.1
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=mybucket
